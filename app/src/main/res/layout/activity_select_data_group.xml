<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".group.SelectDataGroup"
    android:background="?attr/backgroundChat">

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:lottie_fileName="password.json"
        app:lottie_imageAssetsFolder="assets"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"/>

    <TextView
        android:text="@string/L_forget_password"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="@string/L_instructions"
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- image profile -->
    <ImageView
        android:id="@+id/Iv_image"
        android:background="#354f60"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:scaleType="centerCrop"
        android:layout_width="140dp"
        android:layout_height="140dp"/>


    <!--Name-->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <EditText
            android:id="@+id/Et_name"
            android:hint="@string/L_Et_group_name"
            android:inputType="text"
            android:drawableStart="@drawable/ic_email"
            android:padding="20dp"
            android:drawablePadding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/Btn_send_email"
        app:icon="@drawable/ic_send_email"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_width="50dp"
        android:backgroundTint="@color/colorBlue"
        android:textColor="@color/colorGrey2"
        app:iconTint="@color/colorGrey2"
        android:layout_height="wrap_content"/>



</androidx.appcompat.widget.LinearLayoutCompat>